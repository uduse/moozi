{
    "python.pythonPath": "/usr/bin/python",
    "files.associations": {
        "random": "cpp"
    },
    "jupyter.jupyterServerType": "local",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.testing.pytestArgs": [
        "--disable-pytest-warnings",
        "--durations=0",
        // "--profile-svg",
        // "-o faulthandler_timeout=20",
        // "--fulltrace",
        // "--cov=.",
        // "--cov-report=xml",
        // "--cov-report=html",
        "-s",  // capture std output
        "--ignore=local_deps",
        "tests",
    ],
    // disable native tests to avoid redundant CodeLens
    // https://github.com/kondratyev-nv/vscode-python-test-adapter/issues/243
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.mypyEnabled": true,
    "cSpell.enabled": false,
    "restructuredtext.syntaxHighlighting.disabled": true
}